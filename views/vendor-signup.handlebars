<div class="container" id="vendor-sign-up">
  <div class="row">
    <div class="col mt-5">
      <div class="card">
        <h3 class="card-header">Vendor Sign Up</h3>
        <form id="signup-form" class="card-body">

          <div class="form-group">
            <label class="form-label" for="fname-signup">Full Name</label>
            <input id="name-signup" type="text" class="form-control" />
          </div>
          <div class="form-group">
            <label class="form-label" for="businessname-signup">Name of your Business</label>
            <input id="businessname-signup" type="text" class="form-control" />
          </div>
          <div class="form-group">
            <label class="form-label" for="usernumber-signup">Personal or Business Phone Number</label>
            <input id="vendornumber-signup" type="tel" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" required class="form-control" aria-describedby="phoneHelp"/>
            <small id="phoneHelp" class="form-text text-muted">Format: 123-456-7890</small>
          </div>
          <div class="form-group">
            <label for="email-signup">Personal or Business Email</label>
            <input id="email-signup" type="email" class="form-control" aria-describedby="emailHelp"/>
            <small id="emailHelp" class="form-text text-muted">We'll never share
              your email with anyone else.</small>
          </div>
          <div class="form-group">
            <label class="form-label" for="password-signup">Password</label>
            <input
              id="password-signup"
              type="password"
              class="form-control"
              aria-describedby="passwordHelp"
            />
            <small id="passwordHelp" class="text-muted">Must be at least 8
              characters long.</small>
          </div>
          <div class="form-group">
            <label class="form-label" for="category-signup">Category of your Work</label>
            <select name="category" id="category-signup">
              <option value="1">Plumbing</option>
              <option value="2">Electrician</option>
              <option value="3">Auto-Mechanic</Auto-Mechanic></option>
              <option value="4">Painting</option>
              <option value="5">Carpentry</option>
              <option value="6">Landscaping</option>
              <option value="7">Pest-Control</option>
              <option value="8">Welding</option>
              <option value="9">Realty</option>
              <option value="10">General Repair</option>
              <option value="11">Other</option>
            </select>
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary">Sign up!</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<script src="/js/vendor-signup.js"></script>