<div class="container">

    <div class="row mt-5">
        <div class="w-75 mx-auto">
            <div class="card">
                <div class="card-header" id="business-name">
                    <h2>{{vendor_info.business_name}}</h2>
                </div>
                <div class="card-body">
                    <ul class="list-group">
                        <li class="list-group-item v-id" id={{vendor_info.id}}>
                            Owned by:
                            {{vendor_info.name}}
                        </li>
                        <li class="list-group-item c-id" id={{vendor_info.category_id}}>
                            Category:
                            {{vendor_info.category.name}}
                        </li>
                        <li class="list-group-item">
                            Email:
                            {{vendor_info.email}}
                        </li>
                        <li class="list-group-item">
                            Phone:
                            {{vendor_info.phone}}
                        </li>
                    </ul>
                </div>
                <div class="card-footer text-muted">
                    {{! <a href="chat-window">Click here to start chatting to initiate a job request (Must be logged in)</a> }}
                    Click the icon in the bottom of the page to chat with the
                    vendor! Log in to submit a service request!
                </div>
            </div>

        </div>
    </div>

    {{#if vendor_info.reviews.length}}
        <div class="card" id="review">
            <div class="card-title">
                <h4>Reviews</h4>
            </div>

            <div class="card-text">
                <ul>
                    {{#each vendor_info.reviews as |review|}}
                        <li>{{review.review_text}}</li>
                    {{/each}}
                </ul>
            </div>
        </div>
    {{/if}}

    {{#if loggedin_id}}
    <div class="card">
        <form id="newForm" class="card-body">
            <div class="form-group">
                <label for="req_name" class="form-label u-id" id="{{loggedin_id}}">
                    Title of requested service
                </label>
                <input id="req_name" type="text" class='form-control'>
            </div>

            <div class="form-group">
                <label for="req_description" class="form-label">
                    Detailed description of requested service
                </label>
                <input id="req_description" type="text" class='form-control'>
            </div>

            <div class="form-group">
                <label for="req_address" class="form-label">
                    Service Address
                </label>
                <input id="req_address" type="text" class='form-control'>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>

            <div id="status">

            </div>
        </form>
    </div>
    {{/if}}
</div>

    {{#if loggedin_id}}
        <script src='/js/vendor-profile.js'></script>
    {{/if}}

