<div class="container">
    <div class="card" id="info">
        <div class="card-title move" id="business-name">
            <h2>{{vendor_info.business_name}}</h2>
        </div>
        <div class="card-text move v-id" id={{vendor_info.id}}>
            Owned by: {{vendor_info.name}}
        </div>
        <div class="card-text move c-id" id={{vendor_info.category_id}}>
            Category: {{vendor_info.category.name}}
        </div>
        <div class="card-text move">
            Email: {{vendor_info.email}}
        </div>
        <div class="card-text move">
            Phone: {{vendor_info.phone}}
        </div>
        
    </div>

    <div class="card" id="chatBtn">
        <div class="card-title moveMore">
            <p>Click the icon in the bottom of the page to chat with the vendor!</p>
        </div>
        <div class="card-title moveMore">
            <p>Log in to submit a service request!</p>
        </div>
    </div>

    {{#if vendor_info.reviews.length}}
    <div class="card" id="review">
        <div class="card-title move">
            <h4>Reviews</h4>
        </div>
    
        <div class="card-text moveMORE">
            <ul>
            {{#each vendor_info.reviews as |review|}}
                <li>{{review.review_text}}</li>
            {{/each}}
            </ul>
        </div>
    </div>
    {{/if}}

    {{#if loggedin_id}}
    <div class="card">
        <form id="newForm" class="card-body">
            <div class="form-group">
                <label for="req_name" class="form-label u-id" id="{{loggedin_id}}">
                    Title of requested service
                </label>
                <input id="req_name" type="text" class='form-control'>
            </div>

            <div class="form-group">
                <label for="req_description" class="form-label">
                    Detailed description of requested service
                </label>
                <input id="req_description" type="text" class='form-control'>
            </div>

            <div class="form-group">
                <label for="req_address" class="form-label">
                    Service Address
                </label>
                <input id="req_address" type="text" class='form-control'>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>

            <div id="status">

            </div>
        </form>
    </div>
    {{/if}}
</div>

    {{#if loggedin_id}}
        <script src='/js/vendor-profile.js'></script>
    {{/if}}

